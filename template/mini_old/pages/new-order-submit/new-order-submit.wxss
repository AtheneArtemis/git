/* pages/order-submint/order-submint.wxss */
page{
    overflow-x: hidden;
    font-size: 0.75rem;
}
.status-bar {
    box-sizing: border-box;
    padding: 0 88rpx;
    color: #fff;
    font-size: 13pt;
    height: 120rpx;
    line-height: 120rpx;
    position: relative;
}
.status-bar image{
    position: absolute;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}
.block {
    background: #fff;
    padding: 32rpx 24rpx;
    margin-bottom: 20rpx;
}

.block .block-row{
    margin-bottom: 10rpx;
}

.block .block-footer{
    border-top: 1rpx solid #eee;
    margin-left: -24rpx;
    margin-right: -24rpx;
    padding: 24rpx;
    padding-bottom: 0;
    margin-top: 32rpx;
    text-align: right;
    font-weight: bold;
}

.goods-item{
    border-bottom: 1rpx solid #E3E3E3;
    padding-bottom: 32rpx;
    margin-bottom: 32rpx;
}
.goods-item:last-child{
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

.refund-btn{
    float: right;
    height: 60rpx;
    border:1rpx solid #bbb;
    padding: 0 30rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
}
.refund-text{
    float: right;
    display: inline-block;
    margin-top: 20rpx;
}
textarea{
  padding: 0 10rpx;
  margin-left: 20rpx;
}
.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 120rpx;
    background: #fff;
    border-top: 1rpx solid #e3e3e3;
    width: 100%;
    z-index: 1000;
}
.bottom-bar .submit-btn {
    background-color: #ff4544;
    color: #fff;
    width: 270rpx;
    text-align: center;
    margin: 0;
    padding: 0 20rpx;
    border-radius: 0;
    height: 100%;
}
.show{
  display: block;
}
.hide{
  display: none;
}
.zhaoc{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.7;
}
.code-box{
position:fixed;
text-align:center;
background:#fff;
width:86%;
left:7%;
top:15%;
border-radius:16rpx;
z-index:999;
}
.code-text{
  margin: 30rpx 0;
  font-size: 22px;
}
.code-ipt{
  background: #dbf2ff;
  text-align: center;
  width: 80%;
  margin: 30rpx auto;
  line-height: 40px;
  height: 40px;
}
.confirm-btn{margin:30rpx auto;
line-height:60rpx;
width:194rpx;
border-radius:30rpx;
font-size: 0.85rem;}
.close{
  color: #333;
  font-size: 0.65rem;
  margin-bottom: 20rpx
}
.code-box .title{
font-size: 0.95rem;
padding: 30rpx;
text-align: center;
border-bottom: 1px solid #eee;
}
.ftitle{
text-align: center;
padding: 30rpx;
}
.windows{
width:458rpx;
height:400rpx;
}