.imageContainer .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.imageContainer .wx-swiper-dot{
    width:25rpx;
    display: inline-flex;
    height: 8rpx; 
    margin-left: 4rpx;
    justify-content:space-between;
}
.imageContainer .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(249,155,152,0.8);
    border-radius: 8rpx
}
.imageContainer .wx-swiper-dot-active::before{
    background:rgba(248,58,58,0.8);    
